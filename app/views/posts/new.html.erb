<h1>Posts#new</h1>
<p>Find me in app/views/posts/new.html.erb</p>

<%= form_for @post do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<br /><br />
<%= f.label :content %>
<%= f.text_field :content %>
<br />
<%= f.hidden_field :likes, :value => 0 %>
<br />
<%= f.label :blogger %>
<%= f.collection_select :blogger_id, Blogger.all, :id, :name %>
<br />
<br />
<%= f.label :destination %>
<%= f.collection_select :destination_id, Destination.all, :id, :name %>
<br /><br>
<%= f.submit "Create Post" %>
<br />
<% end %>
